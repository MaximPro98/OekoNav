<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChallengeProfile">

    <TextView
        android:id="@+id/txt_ChallangeNameProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Name of the Challenge"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Reward:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/txt_ChallangeNameProfile"
        app:layout_constraintTop_toBottomOf="@+id/txt_ChallangeNameProfile" />

    <TextView
        android:id="@+id/txt_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="1000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <ScrollView
        android:id="@+id/scrollView5"
        android:layout_width="0dp"
        android:layout_height="322dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_ChallangeNameProfile"
        app:layout_constraintStart_toStartOf="@+id/txt_ChallangeNameProfile"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Description of the challange scription of the challangescription of the challangescription of the challangescription of the challangescription of the challangescription of the challangescription of the challangescription of the challangescription of the challangescription of the challangescription of the challangescription of the challangescription of the challangescription of the challangescription of the challangescription of the challange"
            android:textSize="18sp" />
    </ScrollView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Discription"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_ChallangeNameProfile"
        app:layout_constraintStart_toStartOf="@+id/txt_ChallangeNameProfile"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/btn_givup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I Give up"
        app:layout_constraintEnd_toEndOf="@+id/scrollView5"
        app:layout_constraintTop_toBottomOf="@+id/scrollView5" />

    <Button
        android:id="@+id/btn_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/scrollView5"
        app:layout_constraintTop_toBottomOf="@+id/scrollView5" />

    <Button
        android:id="@+id/btn_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        app:layout_constraintEnd_toEndOf="@+id/btn_givup"
        app:layout_constraintStart_toStartOf="@+id/btn_givup"
        app:layout_constraintTop_toBottomOf="@+id/btn_givup" />

    <Button
        android:id="@+id/btn_deny"
        android:layout_width="93dp"
        android:layout_height="44dp"
        android:text="Deny"
        app:layout_constraintStart_toStartOf="@+id/btn_complete"
        app:layout_constraintTop_toBottomOf="@+id/btn_complete" />

    <Button
        android:id="@+id/btn_AddChallange"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="137dp"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="16dp"
        android:text="Add Challange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>