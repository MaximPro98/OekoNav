<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/friendlistButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:visibility="visible"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/friendlist_FriendName_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="FriendsName"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/friendlist_friendScore_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:minWidth="50px"
                    android:text="500"
                    android:textAlignment="center"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/friendlist_gotoFriendsProfile"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="Go to Profile"
                    android:visibility="visible"
                    tools:visibility="visible" />
            </TableRow>

        </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/friendlistButton2"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:text="Add Friend"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>